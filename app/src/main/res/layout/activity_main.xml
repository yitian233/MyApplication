<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.timy.myapplication.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_file"
        android:text="@string/login"
        android:textColor="#ffff"
        app:layout_constraintRight_toLeftOf="@+id/button"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="86dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.285"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/rgSex" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:text="@string/password"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="center"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:layout_width="340dp"
        android:layout_height="30dp"
        android:text="@string/head"
        android:textColor="@color/colorPrimaryDark"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:id="@+id/textView4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView2" />


    <EditText
        android:id="@+id/editText"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/username_hite"
        tools:layout_editor_absoluteY="185dp"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="@string/password_hite"
        android:inputType="textPassword"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/rgSex"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        app:layout_constraintVertical_bias="0.6"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent" />





    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/sysu"
        tools:layout_editor_absoluteX="135dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/editText" />

    <RadioGroup
        android:id="@+id/rgSex"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:checkedButton="@+id/student"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="300dp"
        tools:ignore="NotSibling"
        tools:layout_editor_absoluteX="55dp">

        <RadioButton
            android:id="@+id/student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="学生" />

        <RadioButton
            android:id="@+id/teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="老师" />

        <RadioButton
            android:id="@+id/association"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="社团" />

        <RadioButton
            android:id="@+id/manager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="管理者" />
    </RadioGroup>


    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signup"
        android:textColor="#ffff"
        android:background ="@drawable/custom_file"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="86dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/rgSex" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="78dp"
        android:layout_height="40dp"
        android:text="@string/username"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />


</android.support.constraint.ConstraintLayout>
